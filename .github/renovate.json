{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "rangeStrategy": "bump",
    "ignorePaths": [
        "frontend/android/",
        "frontend/macos/",
        "frontend/ios/"
    ],
    "prHourlyLimit": 0,
    "updateLockFiles": true,
    "lockFileMaintenance": { 
        "enabled": true,
        "schedule": ["before 4am on monday"]
    }
}
